{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "carshare-app",
  "version": "0.1.0",
  "identifier": "com.rizo.carshare-app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "carshare-app",
        "width": 800,
        "height": 600,
        "decorations": false,
        "maximized": true,
        "devtools": true,
        "theme": "Dark"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
